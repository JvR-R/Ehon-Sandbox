RewriteEngine On

# --- 2) Root-only redirect (both www and non-www) to ehonenergy.com.au ---
RewriteCond %{HTTP_HOST} ^(?:www\.)?ehon\.com\.au$ [NC]
RewriteCond %{REQUEST_URI} ^/?$ [NC]
RewriteRule ^ https://ehonenergy.com.au/ [R=301,L]


<IfModule mod_headers.c>
    # Prevent Clickjacking by setting X-Frame-Options
    Header always set X-Frame-Options "DENY"

    # Implement Content Security Policy to restrict framing
    Header always set Content-Security-Policy "frame-ancestors 'self'"

    # (Optional) Additional security headers
    # Prevent MIME-type sniffing
    Header set X-Content-Type-Options "nosniff"

    # Enable XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Enforce secure connections (if using HTTPS)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>
RewriteCond %{HTTP_HOST} ^ehon\.com\.au$ [OR]
RewriteCond %{HTTP_HOST} ^www\.ehon\.com\.au$
RewriteRule ^/?$ "https\:\/\/ehonenergy\.com\.au\/" [R=301,L]

